{
    "inputs":{
        "source_path": "/opt/spark_programs/data/customer.json",
        "file_type": "json",
        "delimiter": ",",
        "header": true,
        "infer_schema": true,
        "multiLine": true,
        "qoute": "\"",
        "escape": "\\",
        "ignoreLeadingWhiteSpace": true,
        "ignoreTrailingWhiteSpace": true,
        "mode": "PERMISSIVE",
        "source_from": "local",
        "source_format": "file",
        "business_key": ["customer_id" ],
        "scd2_source_path": "/opt/spark_programs/data/source/customer_parquet",
        "scd2_target_path": "/opt/spark_programs/data/target/customer_parquet",
        "scd2_tracked_columns": ["personal_info.name", "personal_info.contact.email", "employment_info.role", "employment_info.salary.base" ]
    },
    "transformations":{
        "filter_column": "status",
        "add_date_partition": true,
        "is_flatten_json": true
    },
    "output":{
        "destination_path": "/opt/spark_programs/data/output/",
        "file_type": "parquet",
        "table_name": "customers",
        "mode": "overwrite",
        "partition_columns": ["year", "month","day"]        

    },
    "kafka":{
        "bootstrap_servers": "localhost:9092",
        "topic_name": "customer_topic",
        "checkpoint_location": "/opt/spark_programs/data/checkpoints/customer_kafka_checkpoint"
    },
    "avro":{
        "schema_path": "/opt/spark_programs/schemas/customer.avsc"
    }

}